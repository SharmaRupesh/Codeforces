import java.util.*;
public class Main
{
    
	public static void main(String[] args) 
	{
	    Scanner sc = new Scanner(System.in);
	    
	    int k = sc.nextInt();
	    int n = sc.nextInt();
	    int w = sc.nextInt();
	    int total_cost = 0;
	    
	    for(int i=1;i<=w;i++)
	    {
	        total_cost = total_cost + (i*k);
	    }
	    if (total_cost>n)
	    {
	        System.out.println(total_cost - n);
	    }
	    else
	    {
	        System.out.println("0");  
	    }
    }
}
